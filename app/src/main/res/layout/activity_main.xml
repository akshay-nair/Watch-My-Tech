<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hack.watch.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to"
        android:id="@+id/textView"
        android:layout_marginTop="28dp"
        android:typeface="normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:alpha="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="watchmy.space"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="JOIN EXISTING SESSION >>"
        android:id="@+id/join"
        android:onClick="join"
        android:layout_marginBottom="90dp"
        android:alpha="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#"
        android:id="@+id/number"
        android:layout_marginBottom="36dp"
        android:textStyle="bold"
        android:clickable="false"
        android:focusable="false"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter code"
        android:id="@+id/textView5"
        android:layout_above="@+id/number"
        android:layout_centerHorizontal="true"/>

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/checkedTextView6"
        android:layout_above="@+id/join"
        android:layout_centerHorizontal="true"
        android:checked="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="or"
        android:id="@+id/textView6"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/checkedTextView6"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="on another device"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_msg"
        android:contentDescription="Incorrect code"
        android:src="@drawable/ic_highlight_off_white_24dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/number"
        android:layout_toEndOf="@+id/number"
        android:layout_alignTop="@+id/number"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eye"
        android:src="@drawable/eye"
        android:contentDescription="Content holder"
        android:layout_above="@+id/progress"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GENERATE NEW CODE >>"
        android:id="@+id/gen"
        android:onClick="gen"
        android:alpha="1"
        android:layout_below="@+id/checkedTextView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>


</RelativeLayout>
