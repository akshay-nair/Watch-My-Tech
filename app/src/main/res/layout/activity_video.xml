<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hack.watch.VideoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:contentDescription="Video content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading..."
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Record"
        android:onClick="send"
        android:src="@drawable/ic_record_voice_over_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eye"
        android:src="@drawable/eye"
        android:transitionName="toVideo"
        android:contentDescription="Content holder"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="94dp"
        android:layout_alignBottom="@+id/textView3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Stop! You are being recorded!"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/image"
        android:alpha="0"/>

</RelativeLayout>
